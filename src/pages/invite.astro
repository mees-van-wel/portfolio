---
import Layout from "../layouts/Layout.astro";
import mouth from "../assets/mouthx300.png";
import background1 from "../assets/bg-1.jpg";
import background2 from "../assets/bg-2.jpg";
import inviteBg from "../assets/invite-bg.jpg";
import diver from "../assets/diver-white.png";
import Grid from "../assets/svg/Tunnel.astro";
import GridTunnel from "../assets/svg/Pillar.astro";
import { Image } from "astro:assets";
---

<Layout>
  <Image
    class="background"
    alt="Mouth"
    src={background1}
    width="2560"
    height="1440"
  />
  <Image
    class="background2"
    alt="Mouth"
    src={background2}
    width="2560"
    height="1440"
  />
  <div class="background-blur"></div>
  <GridTunnel class="grid-tunnel" />
  <section class="invite">
    <div class="page">
      <h1 class="title">Protocol Euphoria</h1>
      <div class="content">
        <Image
          class="content-background"
          alt="Background"
          src={inviteBg}
          width="6000"
          height="4000"
        />
        <p class="sub">
          Datum prikken,<br />snoepje slikken,<br />dansen tot onze knieÃ«n
          knikken.
        </p>
        <Image class="mouth" alt="Mouth" src={mouth} width="200" height="200" />
        <a
          href="https://datumprikker.nl/p9xnwi7w89hth2im"
          target="_blank"
          class="discoBtn">Datumprikker</a
        >
        <Grid class="grid" />
        <p class="sub2">Meer info volgt</p>
      </div>
      <!-- <div class="footer">
        <h1 class="footer-title">See You There</h1>
        <Image class="diver" alt="Diver" src={diver} width="200" />
      </div> -->
    </div>
  </section>
  <!-- <TunnelHalf class="tunnel-half" /> -->
</Layout>

<style is:global>
  body {
    background-attachment: fixed;
    background-size: cover;
    /* background-image: linear-gradient(
        135deg,
        #fcc5e4 0%,
        #fda34b 15%,
        #ff7882 35%,
        #c8699e 52%,
        #7046aa 71%,
        #0c1db8 87%,
        #020f75 100%
      ); */
  }
</style>

<style lang="scss">
  @use "sass:color";

  .grid {
    position: absolute;
    top: 0;
    left: -10rem;
    width: 70%;
    opacity: 0.2;
    transform: rotate(-60deg);
  }

  @keyframes moveXY {
    0% {
      transform: translate(0, 0);
    }
    20% {
      transform: translate(20%, 20%);
    }
    40% {
      transform: translate(20%, -20%);
    }
    60% {
      transform: translate(0, 0);
    } /* Pass through center */
    80% {
      transform: translate(-20%, -20%);
    }
    100% {
      transform: translate(0, 0);
    }
  }

  @keyframes fadeLoop {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  $dark: #15171e;
  $white: color.mix($dark, white, 20%);
  $red: #fd0000;
  $citron: #fdfd00;
  $purple: #a0038b;

  .sub {
    position: absolute;
    top: 1rem;
    left: -3rem;
    right: 30%;
    background-color: #222;
    border-radius: 1rem;
    letter-spacing: 0.2rem;
    text-transform: uppercase;
    font-size: 1rem;
    transform: rotate(-5deg);
    line-height: 2;
    padding: 1rem 0.5rem;
    color: #ccc;
    box-shadow: 0 4px 4px 4px rgba(0, 0, 0, 0.3);
    max-width: 250px;
    padding-left: 3rem;
  }

  .sub2 {
    position: absolute;
    bottom: 10rem;
    right: -2rem;
    background-color: #222;
    border-radius: 1rem;
    letter-spacing: 0.2rem;
    text-transform: uppercase;
    font-size: 0.8rem;
    transform: rotate(5deg);
    line-height: 2;
    box-shadow: 0 4px 4px 4px rgba(0, 0, 0, 0.3);
    padding: 1rem;
    max-width: 300px;
    color: #ccc;
  }

  .discoBtn {
    position: relative;
    display: inline-block;
    margin: auto;
    padding: 1rem;
    margin-top: 40vh;
    color: #ccc;
    box-shadow: 0 4px 4px 4px rgba(0, 0, 0, 0.3);
    font-size: 1.2rem;
    text-transform: uppercase;
    text-decoration: none;
    letter-spacing: 0.5rem;
    animation-play-state: running;
    background-color: #222;

    &:before {
      content: "";
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      border: 4px solid transparent;
      transition: border-width 0.25s;
      border-image: linear-gradient(135deg, $purple, $red, $citron);
      border-image-slice: 1;
      pointer-events: none;
      filter: hue-rotate(0deg);
      animation: 3s linear 0s infinite normal both hueShift;
    }

    &:hover:before {
      border-width: 8px;
      animation-duration: 0.5s;
    }
  }

  @keyframes hueShift {
    100% {
      filter: hue-rotate(360deg);
    }
  }

  .grid-tunnel {
    position: fixed;
    width: 100%;
    height: 100%;
    scale: 2.4;
    z-index: 0;
    top: 4.5rem;
    opacity: 0.2;
    /* transform: rotate(180deg); */
  }

  .tunnel-half {
    position: fixed;
    width: 300px;
    top: 0;
    left: -5rem;
  }

  .background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    scale: 3;
    z-index: 0;
    animation: moveXY 20s infinite ease-in-out;
  }

  .background2 {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    scale: 1;
    z-index: 0;
    animation: fadeLoop 10s infinite ease-in-out;
    /* animation: moveXY 20s infinite ease-in-out; */
  }

  .background-blur {
    backdrop-filter: blur(64px);
    position: fixed;
    inset: 0;
    z-index: 0;
  }

  .invite {
    text-align: center;
    padding: 2rem;
  }

  .page {
    box-shadow: 0 0 8px 2px rgba(0, 0, 0, 0.1);
    color: black;
    width: 100%;
    max-width: 1000px;
    height: 93.5vh;
    border-radius: 1rem;
    margin: 0 auto;
  }

  .title {
    mix-blend-mode: screen;
    margin: 0;
    background-color: white;
    padding: 1rem;
    font-size: 2.2rem;
    text-transform: uppercase;
    letter-spacing: 0.7rem;
    padding-left: 8%;
    font-weight: bold;
    border-bottom: dashed 8px black;
    border-top-left-radius: 1rem;
    border-top-right-radius: 1rem;
  }

  .content {
    padding: 1rem;
    background-color: white;
    height: 100%;
    position: relative;
    margin-bottom: 1rem;
    border-radius: 1rem;
  }

  .content-background {
    position: absolute;
    top: -136px;
    border-radius: 1rem;
    left: 0;
    width: 100%;
    height: calc(100% + 224px);
    object-fit: cover;
    opacity: 0.2;
  }

  .mouth {
    position: absolute;
    right: -5rem;
    transform: rotate(30deg);
    top: 10vh;
    filter: drop-shadow(black 1rem 0.2rem 2px);
  }

  .footer {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    /* align-items: stretch; */
  }

  .footer-title {
    mix-blend-mode: screen;
    background-color: white;
    font-size: 10rem;
    flex: 1;
    margin: 0;
    display: grid;
    place-content: center;
    margin-bottom: 4rem;
    border-bottom-left-radius: 10rem;
    border-right: dashed 8px black;
    border-top: dashed 8px black;
    /* text-transform: uppercase; */
  }

  @keyframes glitch {
    0% {
      filter: none;
    }
    2% {
      filter: drop-shadow(red 1rem 1rem 0px);
      transform: translate(1rem, -1rem);
    }
    4% {
      filter: none;
      transform: translate(0, 0);
    }
    4% {
      filter: drop-shadow(green -2rem -1rem 0px);
      transform: translate(-1rem, 0.5rem);
    }
    8% {
      filter: none;
      transform: translate(0, 0);
    }
    10% {
      filter: drop-shadow(blue 1rem 1rem 0px);
      transform: translate(1rem, -1rem);
    }
    12% {
      filter: none;
      transform: translate(0, 0);
    }
    100% {
      filter: none;
      transform: translate(0, 0);
    }
  }

  .diver {
    position: relative;
    margin-bottom: 4rem;
    animation: glitch 2s infinite steps(1, end);
  }
</style>
